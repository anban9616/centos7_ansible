! Configuration File for keepalived

global_defs {
   router_id MySQL-HA
}

vrrp_script check_run {
    script "{{ keepalived.mysql_check }}"
    interval 6
}

vrrp_instance VI_1 {
    state BACKUP
    interface {{ keepalived.interface }}
    virtual_router_id 51
{% if 'node1' in group_names %}
    priority 100
{% endif %}
{% if 'node2' in group_names %}
    priority 80
{% endif %}
    advert_int 1
    nopreempt
    authentication {
        auth_type PASS
        auth_pass 1111
    }
    virtual_ipaddress {
        {{ keepalived.vip }}
    }

    track_script {
        check_run
    }
}
